<Window x:Class="MMFPAdminka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMFPAdminka"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <d:DesignProperties.DataContext>
        <local:MainViewModel />
    </d:DesignProperties.DataContext>
    <Grid>
        <TabControl DataContext="{Binding Questions}">
            <TabItem Header="Создание теста">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Имя:" Width="50"/>
                    <TextBox Text="{Binding Name}" 
                             Height="24" Width="87" VerticalAlignment="Top"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
